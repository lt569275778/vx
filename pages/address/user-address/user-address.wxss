/*地址管理*/

page {
  background-color: #efeff4;
  font-size: 10pt;
  -webkit-user-select: none;
  user-select: none;
  width: 100%;
  overflow-x: hidden;
}

.address {
  display: flex;
  flex-wrap: wrap;
  background-color: #fff;
  margin-top: 1px;
  padding: 30rpx;
  margin: 30rpx 0;
}

.address-icon {
  width: 65rpx;
  float: left;
}

.address-detail {
  width: 100%;
}
.address-phone{
  float: right;
}
.address-name-phone {
  margin-bottom: 30rpx;
  font-size: 11pt;
  font-weight: 900;
}

.address-name{
  margin-right: 30rpx;
}

.address-info {
   margin-bottom: 44rpx; 
}

.address-edit {
  border-top: 1px #efeff4 solid;
  margin-bottom: 30rpx;
}

.add-address {
width: 500rpx;
height: 94rpx;
background-color: #FB6C47;
font-size: 36rpx;
color: #fff;
border-radius: 10rpx;
text-align: center;
line-height: 94rpx;
margin: 0 auto;
}
.addaddres{
  position: relative;
  top: -90rpx;
}
.add-address-icon {
  height: 20px;
  width: 20px;
}

.pull-right{
  width: 130rpx;
  height: 60rpx;
  float: right;
  border: 1px solid #f4f4f4;
  text-align: center;
  line-height: 60rpx;
  border-radius: 10rpx;
  margin-left: 30rpx;
}

.body{
  margin-top: 30rpx;
}

.addres{
  display: inline-block;
  margin-top: 15rpx;
}